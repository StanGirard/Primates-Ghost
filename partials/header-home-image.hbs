{{#is "home"}}
<div class="cHeader u-flexColumnContentCenter u-flexCenter u-textAlignCenter u-relative u-bgDark u-hide-before-lg">
    <div class="u-relative zindex2 u-container">
        <div class="cHeader-logo">
            {{#if @site.logo}}
                <img class="cHeader-logo-img" src="{{img_url @site.logo size="l"}}" alt="{{@site.title}}"/>
            {{else}}
                <span class="u-fontSize28 u-fontWeightBold u-textColorWhite u-fontSizeJumbo">{{@site.title}}</span>
            {{/if}}
        </div>

        {{#if @site.description}}
            <div class="cHeader-des u-fontSize22 u-textColorWhite u-marginTop30 u-maxWidth740 u-marginAuto">{{@site.description}}</div>
        {{/if}}
    </div>

    {{!-- background --}}
    {{#if @site.cover_image}}
    <img class="u-absolute0 u-image u-block blur-up lazyload"
        src="{{img_url @site.cover_image size="m"}}"
        srcset="{{img_url @site.cover_image size="xxs"}}"
        data-srcset="{{img_url @site.cover_image size="s"}} 300w,
            {{img_url @site.cover_image size="m"}} 600w,
            {{img_url @site.cover_image size="l"}} 1000w,
            {{img_url @site.cover_image size="xl"}} 2000w"
        data-sizes="(max-width: 800px) 400px, (max-width: 1170px) 700px, 1400px"
        alt="{{@site.title}}"
    />
    <span class="u-absolute0 zindex1 cover-gradient"></span>
    {{/if}}
</div>
{{/is}}

<header class="header u-sizeFullWidth u-fontSizeSmaller u-container u-bgheader u-flexCenter">
    <div class="header-wrap u-flexCenter  u-maxWidth1100 u-marginAuto u-flex1">
        {{!-- Logo --}}
        <div class="header-left u-flex0 {{#is "home"}}u-hide-after-lg{{/is}}">
            <a class="header-logo u-block u-lineHeight1 godo-tracking" href="{{@site.url}}" data-event-category="Header" data-event-action="Logo" data-event-label="Click" data-event-non-interaction="true">
                {{#if @site.logo}}
                    <img src="{{img_url @site.logo size="m"}}" alt="{{@site.title}}"/>
                {{else}}
                    <span class="u-fontSize28 u-fontWeightBold">{{@site.title}}</span>
                {{/if}}
            </a>
        </div>

        {{!-- Navigation --}}
        <nav class="header-center u-relative u-overflowHidden u-flex u-flex1 u-paddingRight20 u-flexCenter u-hide-before-lg u-menu-color" role="navigation" aria-label="Primary Menu">
            <ul class="mainMenu u-unstyled u-flex1" itemscope itemtype="http://schema.org/SiteNavigationElement" role="menu">
                {{navigation}}
            </ul>
        </nav>

        <div class="header-right u-flex0 u-flex u-flexEnd u-menu-color">
            {{!-- Social Media - partilas/widget/social-media.hbs --}}
            {{> "widget/social-media"}}

            {{!-- Toggle Searcg --}}
            <a href="#" aria-label="Search" class="js-search-open nav-search godo-tracking u-pointer u-hide" data-event-category="Header" data-event-action="Search" data-event-label="Click" data-event-non-interaction="true">
                <svg class="icon icon--search icon--md"><use xlink:href="#icon-search"></use></svg>
            </a>
            {{!-- Toggle Menu --}}
            <div class="js-menu-toggle menu-burger u-relative u-hide-after-lg u-pointer"><span></span><span></span><span></span></div>
        </div>
    </div>
</header>

