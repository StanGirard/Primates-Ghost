<article class="homeHero-largeCard">
    {{!-- Featured Image --}}
    <a href="{{url}}" class="hhp-image">
         <div class="hhp-img u-borderLighter u-bgColorGrayLight u-relative u-marginBottom15">
            {{#if feature_image}}
                <img class="u-image u-block u-absolute0"
                    src="{{img_url feature_image size="s"}}"
                    srcset="{{img_url feature_image size="s"}} 300w,{{img_url feature_image size="m"}} 600w"
                    alt="{{title}}"
                />
            {{/if}}
         </div>
    </a>
    {{!-- Content --}}
    <div class="hhp-body">
        <div class="hhp-titleWrap u-flexColumnTop u-flexWrap u-overflowHidden u-marginBottom15">
            <a href="{{url}}" class="u-overflowHidden u-sizeFullWidth"><h1 class="hhp-title u-fontSizeLarge u-contentTitle">{{title}}</h1></a>
            <a href="{{url}}" class="u-sizeFullWidth"><div class="hhp-excerpt">{{excerpt words="30"}}</div></a>
        </div>

        {{!-- Author - Primary Tag - Datetime - Read time - partials/helper/helper-by-line.hbs --}}
        {{> "helper/helper-author-meta"}}
    </div>
</article>
