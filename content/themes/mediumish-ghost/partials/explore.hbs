<div class="jumbotron fortags">
	<div class="row h-100">
		<div class="col-md-4 my-auto align-self-center text-center h-100">
			<h2 class="hidden-sm-down">{{t "Explore"}} &rarr;</h2>
		</div>
		<div class="col-md-8 align-self-center text-center">
		{{#get "tags" limit="20" include="count.posts" order="count.posts desc"}}
    {{#foreach tags}}
        <a href="/tag/{{slug}}"># {{name}}</a>
    {{/foreach}}
		{{/get}}
		</div>
	</div>
</div>
