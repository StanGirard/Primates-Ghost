<span class="navigation" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-angle-double-left"></i></a> &nbsp;
    {{/if}}
        {{t "Page"}} <span class="page-number"> {{page}} {{t "of"}} {{pages}}</span> &nbsp;
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}"><i class="fa fa-angle-double-right"></i></a>
    {{/if}}
</span>
